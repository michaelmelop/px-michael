            <p class="stat-number">567</p>
          </div>
          <div class="stat-icon">üì¶</div>
        </div>
      </div>
      <div class="stat-card card">
        <div class="card-body">
          <div class="stat-content">
            <h3 class="stat-title">En Stock</h3>
            <p class="stat-number">423</p>
          </div>
          <div class="stat-icon">‚úÖ</div>
        </div>
      </div>
      <div class="stat-card card">
        <div class="card-body">
          <div class="stat-content">
            <h3 class="stat-title">Agotados</h3>
            <p class="stat-number">34</p>
          </div>
          <div class="stat-icon">‚ùå</div>
        </div>
      </div>
      <div class="stat-card card">
        <div class="card-body">
          <div class="stat-content">
            <h3 class="stat-title">Categor√≠as</h3>
            <p class="stat-number">12</p>
          </div>
          <div class="stat-icon">üè∑Ô∏è</div>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="filters-card card mb-6">
      <div class="card-body">
        <div class="filters-grid grid grid-4 gap-4">
          <div class="filter-group">
            <label class="filter-label">Buscar producto</label>
            <input type="text" class="filter-input" placeholder="Buscar productos..." id="searchInput">
          </div>
          <div class="filter-group">
            <label class="filter-label">Categor√≠a</label>
            <select class="filter-select" id="categoryFilter">
              <option value="">Todas las categor√≠as</option>
              <option value="electronics">Electr√≥nicos</option>
              <option value="clothing">Ropa</option>
              <option value="books">Libros</option>
              <option value="home">Hogar</option>
            </select>
          </div>
          <div class="filter-group">
            <label class="filter-label">Estado</label>
            <select class="filter-select" id="statusFilter">
              <option value="">Todos</option>
              <option value="active">Activo</option>
              <option value="inactive">Inactivo</option>
            </select>
          </div>
          <div class="filter-group">
            <label class="filter-label">Stock</label>
            <select class="filter-select" id="stockFilter">
              <option value="">Todos</option>
              <option value="instock">En stock</option>
              <option value="outofstock">Agotado</option>
            </select>
          </div>
        </div>
      </div>
    </div>

    <!-- Products Table -->
    <div class="products-table-card card">
      <div class="card-header">
        <h2>Lista de Productos</h2>
        <span class="products-count">Total: 567 productos</span>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
