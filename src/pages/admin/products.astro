---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Gesti√≥n de Productos" currentPage="products">
  <div class="products-container">
    <!-- Header with actions -->
    <div class="products-header flex items-center justify-between mb-6">
