                <th>Acciones</th>
              </tr>
            </thead>
            <tbody id="productsTableBody">
              <tr>
                <td>
                  <div class="product-info">
                    <div class="product-image">üñ•Ô∏è</div>
                    <div class="product-details">
                      <div class="product-name">Laptop HP Pavilion</div>
                      <div class="product-sku">SKU: LP001</div>
                    </div>
                  </div>
                </td>
                <td><span class="category-badge electronics">Electr√≥nicos</span></td>
                <td class="price">$899.99</td>
                <td>
                  <span class="stock-badge instock">25 unidades</span>
                </td>
                <td><span class="status-badge active">Activo</span></td>
                <td>15/03/2024</td>
                <td>
                  <div class="action-buttons">
                    <button class="btn btn-sm btn-secondary" onclick="editProduct(1)">Editar</button>
                    <button class="btn btn-sm btn-danger" onclick="deleteProduct(1)">Eliminar</button>
                  </div>
                </td>
              </tr>
              <tr>
                <td>
                  <div class="product-info">
                    <div class="product-image">üëï</div>
                    <div class="product-details">
                      <div class="product-name">Camiseta B√°sica</div>
                      <div class="product-sku">SKU: CM001</div>
                    </div>
                  </div>
                </td>
                <td><span class="category-badge clothing">Ropa</span></td>
                <td class="price">$19.99</td>
                <td>
                  <span class="stock-badge instock">150 unidades</span>
                </td>
                <td><span class="status-badge active">Activo</span></td>
                <td>12/03/2024</td>
                <td>
                  <div class="action-buttons">
                    <button class="btn btn-sm btn-secondary" onclick="editProduct(2)">Editar</button>
                    <button class="btn btn-sm btn-danger" onclick="deleteProduct(2)">Eliminar</button>
                  </div>
                </td>
              </tr>
              <tr>
                <td>
                  <div class="product-info">
                    <div class="product-image">üìö</div>
                    <div class="product-details">
                      <div class="product-name">Libro de JavaScript</div>
                      <div class="product-sku">SKU: LB001</div>
                    </div>
                  </div>
                </td>
                <td><span class="category-badge books">Libros</span></td>
                <td class="price">$29.99</td>
                <td>
                  <span class="stock-badge outofstock">0 unidades</span>
                </td>
                <td><span class="status-badge inactive">Inactivo</span></td>
                <td>10/03/2024</td>
                <td>
                  <div class="action-buttons">
                    <button class="btn btn-sm btn-secondary" onclick="editProduct(3)">Editar</button>
                    <button class="btn btn-sm btn-danger" onclick="deleteProduct(3)">Eliminar</button>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        
        <!-- Pagination -->
        <div class="pagination-container">
          <div class="pagination-info">
            Mostrando 1-10 de 567 productos
          </div>
          <div class="pagination-controls">
            <button class="btn btn-sm btn-secondary" disabled>Anterior</button>
            <button class="btn btn-sm btn-primary">1</button>
            <button class="btn btn-sm btn-secondary">2</button>
            <button class="btn btn-sm btn-secondary">3</button>
            <button class="btn btn-sm btn-secondary">Siguiente</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Create Product Modal -->
  <div id="createProductModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3>Crear Nuevo Producto</h3>
        <button class="modal-close" onclick="closeModal('createProductModal')">&times;</button>
      </div>
      <div class="modal-body">
        <form id="createProductForm">
          <div class="form-group">
            <label class="form-label">Nombre del producto</label>
            <input type="text" class="form-input" placeholder="Nombre del producto" required>
          </div>
          <div class="form-group">
            <label class="form-label">SKU</label>
            <input type="text" class="form-input" placeholder="SKU del producto" required>
          </div>
          <div class="form-group">
            <label class="form-label">Categor√≠a</label>
            <select class="form-select" required>
              <option value="">Seleccionar categor√≠a</option>
              <option value="electronics">Electr√≥nicos</option>
              <option value="clothing">Ropa</option>
              <option value="books">Libros</option>
              <option value="home">Hogar</option>
            </select>
          </div>
          <div class="form-group">
            <label class="form-label">Precio</label>
            <input type="number" class="form-input" placeholder="0.00" step="0.01" required>
          </div>
          <div class="form-group">
            <label class="form-label">Stock inicial</label>
            <input type="number" class="form-input" placeholder="0" min="0" required>
          </div>
          <div class="form-group">
            <label class="form-label">Descripci√≥n</label>
            <textarea class="form-textarea" placeholder="Descripci√≥n del producto" rows="3"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" onclick="closeModal('createProductModal')">Cancelar</button>
        <button class="btn btn-primary" onclick="createProduct()">Crear Producto</button>
      </div>
    </div>
  </div>
</AdminLayout>

<style>
  .products-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .page-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .page-subtitle {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  .products-count {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .product-stats {
    margin-bottom: 2rem;
  }

  .stat-card .card-body {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .stat-content {
    flex: 1;
  }

  .stat-title {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.25rem;
  }

  .stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
  }

  .stat-icon {
    font-size: 2rem;
    opacity: 0.7;
  }

  .filters-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .filter-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .filter-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text);
  }

  .filter-input,
  .filter-select {
    padding: 0.5rem;
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    font-size: 0.875rem;
  }

  .table-responsive {
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  .product-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .product-image {
    width: 40px;
    height: 40px;
    border-radius: var(--border-radius);
    background-color: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
  }

  .product-name {
    font-weight: 500;
    font-size: 0.875rem;
  }

  .product-sku {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .category-badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .category-badge.electronics {
    background-color: #dbeafe;
    color: #2563eb;
  }

  .category-badge.clothing {
    background-color: #fce7f3;
    color: #be185d;
  }

  .category-badge.books {
    background-color: #d1fae5;
    color: #059669;
  }

  .category-badge.home {
    background-color: #fef3c7;
    color: #d97706;
  }

  .price {
    font-weight: 600;
    color: var(--color-success);
  }

  .stock-badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .stock-badge.instock {
    background-color: #d1fae5;
    color: #059669;
  }

  .stock-badge.outofstock {
    background-color: #fecaca;
    color: #dc2626;
  }

  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .status-badge.active {
    background-color: #d1fae5;
    color: #059669;
  }

  .status-badge.inactive {
    background-color: #fef3c7;
    color: #d97706;
  }

  .action-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .pagination-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }

  .pagination-info {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .pagination-controls {
    display: flex;
    gap: 0.5rem;
  }

  /* Modal Styles */
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .modal-content {
    background-color: var(--color-surface);
    margin: 5% auto;
    padding: 0;
    border-radius: var(--border-radius);
    width: 90%;
    max-width: 500px;
    box-shadow: var(--shadow-lg);
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .modal-header h3 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
  }

  .modal-close {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .modal-body {
    padding: 1rem;
  }

  .modal-footer {
    padding: 1rem;
    border-top: 1px solid var(--color-border);
    display: flex;
    gap: 0.5rem;
    justify-content: flex-end;
  }

  .form-group {
    margin-bottom: 1rem;
  }

  .form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--color-text);
    font-size: 0.875rem;
  }

  .form-input,
  .form-select,
  .form-textarea {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    font-size: 0.875rem;
    font-family: inherit;
  }

  .form-textarea {
    resize: vertical;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .products-header {
      flex-direction: column;
      gap: 1rem;
      align-items: stretch;
    }

    .filters-grid {
      grid-template-columns: 1fr;
    }

    .product-stats {
      grid-template-columns: repeat(2, 1fr);
    }

    .table-responsive {
      font-size: 0.875rem;
    }

    .product-info {
      flex-direction: column;
      gap: 0.5rem;
      text-align: center;
    }

    .action-buttons {
      flex-direction: column;
    }

    .pagination-container {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>

<script>
  // Modal functionality
  function openModal(modalId) {
    const modal = document.getElementById(modalId);
    if (modal) {
      modal.style.display = 'block';
    }
  }

  function closeModal(modalId) {
    const modal = document.getElementById(modalId);
    if (modal) {
      modal.style.display = 'none';
    }
  }

  // Product actions
  function editProduct(productId) {
    alert(`Editar producto ID: ${productId}`);
  }

  function deleteProduct(productId) {
    if (confirm('¬øEst√°s seguro de que deseas eliminar este producto?')) {
      alert(`Producto ID: ${productId} eliminado`);
    }
  }

  function createProduct() {
    alert('Producto creado exitosamente');
    closeModal('createProductModal');
  }

  // Close modal when clicking outside
  window.onclick = function(event) {
    const modals = document.querySelectorAll('.modal');
    modals.forEach(modal => {
      if (event.target === modal) {
        modal.style.display = 'none';
      }
    });
  }
</script>