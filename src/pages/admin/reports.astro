</AdminLayout>

<style>
  .reports-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .page-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .page-subtitle {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  .date-filter-controls {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .date-range {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .filter-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text);
  }

  .filter-select {
    padding: 0.5rem;
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    font-size: 0.875rem;
    min-width: 150px;
  }

  .metrics-grid {
    margin-bottom: 2rem;
  }

  .metric-card {
    transition: transform 0.2s ease;
  }

  .metric-card:hover {
    transform: translateY(-2px);
  }

  .metric-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .metric-title {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  .metric-icon {
    font-size: 1.5rem;
    opacity: 0.7;
  }

  .metric-value {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .metric-change {
    font-size: 0.75rem;
    font-weight: 500;
  }

  .metric-change.positive {
    color: var(--color-success);
  }

  .metric-change.negative {
    color: var(--color-error);
  }

  .charts-section {
    margin-bottom: 2rem;
  }

  .chart-container {
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .chart-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .chart-bars {
    display: flex;
    align-items: end;
    justify-content: space-between;
    height: 80%;
    padding: 0 1rem;
  }

  .bar {
    width: 20px;
    background: linear-gradient(to top, var(--color-primary), var(--color-primary-dark));
    border-radius: 2px;
    min-height: 20px;
    transition: all 0.3s ease;
  }

  .bar:hover {
    background: linear-gradient(to top, var(--color-primary-dark), var(--color-primary));
  }

  .chart-line {
    height: 80%;
    position: relative;
    padding: 0 1rem;
  }

  .line-chart {
    position: relative;
    height: 100%;
    display: flex;
    align-items: end;
    justify-content: space-between;
  }

  .line-point {
    width: 8px;
    height: 8px;
    background-color: var(--color-primary);
    border-radius: 50%;
    position: relative;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.3);
  }

  .line-point:not(:last-child)::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 100%;
    width: 20px;
    height: 2px;
    background-color: var(--color-primary);
    transform: translateY(-50%);
  }

  .chart-labels {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem 1rem;
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .report-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .report-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    border-radius: var(--border-radius);
    transition: background-color 0.2s ease;
  }

  .report-item:hover {
    background-color: var(--color-background);
  }

  .item-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .item-name {
    font-weight: 500;
    font-size: 0.875rem;
  }

  .item-details {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .item-value {
    font-weight: 600;
    font-size: 1rem;
    color: var(--color-primary);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .date-filter-controls {
      flex-direction: column;
      align-items: stretch;
    }

    .date-range {
      flex-direction: column;
      align-items: stretch;
    }

    .metrics-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .charts-section {
      grid-template-columns: 1fr;
    }

    .detailed-reports {
      grid-template-columns: 1fr;
    }

    .metric-value {
      font-size: 1.5rem;
    }

    .chart-container {
      height: 150px;
    }
  }

  @media (max-width: 480px) {
    .metrics-grid {
      grid-template-columns: 1fr;
    }

    .chart-bars {
      padding: 0 0.5rem;
    }

    .bar {
      width: 15px;
    }

    .chart-labels {
      padding: 0.5rem 0.5rem;
    }
  }
</style>

<script>
  function generateReports() {
    const dateRange = document.getElementById('dateRange').value;
    alert(`Generando reportes para los 칰ltimos ${dateRange} d칤as...`);
    
    // Simular carga de datos
    setTimeout(() => {
      alert('Reportes generados exitosamente');
    }, 1000);
  }

  // Animate charts on load
  document.addEventListener('DOMContentLoaded', function() {
    const bars = document.querySelectorAll('.bar');
    const points = document.querySelectorAll('.line-point');
    
    // Animate bars
    bars.forEach((bar, index) => {
      setTimeout(() => {
        bar.style.opacity = '1';
        bar.style.transform = 'scaleY(1)';
      }, index * 100);
    });
    
    // Animate line points
    points.forEach((point, index) => {
      setTimeout(() => {
        point.style.opacity = '1';
        point.style.transform = 'scale(1)';
      }, index * 150);
    });
  });
</script>