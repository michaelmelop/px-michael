    </div>

    <!-- Quick Actions -->
    <div class="quick-actions card mb-6">
      <div class="card-header">
        <h2>Acciones R치pidas</h2>
      </div>
      <div class="card-body">
        <div class="actions-grid grid grid-3 gap-4">
          <a href="/admin/users" class="action-item">
            <div class="action-icon">游논</div>
            <div class="action-content">
              <h3>Gestionar Usuarios</h3>
              <p>Crear, editar y eliminar usuarios</p>
            </div>
          </a>
          
          <a href="/admin/products" class="action-item">
            <div class="action-icon">游닍</div>
            <div class="action-content">
              <h3>Gestionar Productos</h3>
              <p>Administrar cat치logo de productos</p>
            </div>
          </a>
          
          <a href="/admin/reports" class="action-item">
            <div class="action-icon">游늳</div>
            <div class="action-content">
              <h3>Ver Reportes</h3>
              <p>Analizar estad칤sticas y reportes</p>
            </div>
          </a>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="recent-activity card">
      <div class="card-header">
        <h2>Actividad Reciente</h2>
      </div>
      <div class="card-body">
        <div class="activity-list">
          <div class="activity-item">
            <div class="activity-icon">游녻</div>
            <div class="activity-content">
              <p><strong>Nuevo usuario registrado:</strong> Mar칤a Gonz치lez</p>
              <span class="activity-time">Hace 2 minutos</span>
            </div>
          </div>
          
          <div class="activity-item">
            <div class="activity-icon">游눯</div>
            <div class="activity-content">
              <p><strong>Venta realizada:</strong> $250.00</p>
